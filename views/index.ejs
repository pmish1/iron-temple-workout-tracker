<%- include('./partials/head.ejs') %>


<h1>workout tracker</h1>


<!-- to go to the current workout page -->
<form action="/workout-tracker/createWorkout" method="POST">
   
    <label for="workoutName">Name:</label>
    <input type="text" name="name" id="workoutName"/>

    <input type="submit" value="START WORKOUT"/>


</form>



<% for(let i = 0; i < workouts.length; i++) { %>
    <li><a href="/workout-tracker/<%= workouts[i]._id %>/view"><%= workouts[i].name %></a></li>
    <a href="/workout-tracker/<%= workouts[i]._id %>/delete">DELETE</a>
<% } %>

</main>




</body>
</html>